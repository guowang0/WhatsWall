<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff0f2" >

    <EditText
        android:id="@+id/login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/register_edit"
        android:hint="@string/edit_phone"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/register_edit"
        android:hint="@string/edit_password"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />

        <Button
        android:id="@+id/login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_alignLeft="@+id/login_password"
        android:layout_marginTop="30dp"
        android:background="@drawable/area_button"
        android:text="@string/action_register"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/login_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_alignRight="@+id/login_password"
        android:layout_marginTop="30dp"
        android:background="@drawable/area_button"
        android:text="@string/action_login"
        android:textSize="20sp" />
    
    <Button 
        android:id="@+id/login_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_enter"
        android:layout_alignLeft="@+id/login_password"
        android:textColor="#00ff00"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/action_login_other"/>
    
        <Button 
        android:id="@+id/login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_enter"
        android:layout_alignRight="@+id/login_password"
        android:textColor="#00ff00"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/action_login_forget"/>

</RelativeLayout>