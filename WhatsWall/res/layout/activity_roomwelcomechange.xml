<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background" >

    <EditText
        android:id="@+id/roomwelcomchange_edit"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/room_publish_edit_background"
        android:gravity="top|left"
        android:hint="@string/edit_welcome"
        android:textCursorDrawable="@null"
        android:padding="10dp"
        android:textColor="@color/button_text" />

    <Button
        android:id="@+id/roomwelcomchange_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomwelcomchange_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_"
        android:text="@string/action_ok"
        android:textColor="@color/button_text" />

</RelativeLayout>