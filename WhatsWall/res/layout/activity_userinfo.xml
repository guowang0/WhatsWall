<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff0f2" >

    <ImageView
        android:id="@+id/userinfo_userimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/content_userimg" />

    <TextView
        android:id="@+id/userinfo_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userinfo_userimg"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/userinfo_userimg"
        android:background="#00000000"
        android:text="@string/textview_nickname"
        android:textSize="18sp" />

    <Button
        android:id="@+id/userinfo_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userinfo_nickname_tv"
        android:layout_alignBottom="@+id/userinfo_userimg"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/userinfo_nickname_tv"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:text="@string/action_nickname"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userinfo_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinfo_nickname_tv"
        android:layout_below="@+id/userinfo_nickname_tv"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:text="@string/textview_username_"
        android:textSize="18sp" />

    <Button
        android:id="@+id/userinfo_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userinfo_username_tv"
        android:layout_alignBottom="@+id/userinfo_username_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/userinfo_username_tv"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:text="@string/action_username"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userinfo_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinfo_nickname_tv"
        android:layout_below="@+id/userinfo_username_tv"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:text="@string/textview_phone"
        android:textSize="18sp" />

    <Button
        android:id="@+id/userinfo_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userinfo_phone_tv"
        android:layout_alignBottom="@+id/userinfo_phone_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/userinfo_phone_tv"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:text="@string/action_phone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userinfo_sex_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinfo_nickname_tv"
        android:layout_below="@+id/userinfo_phone_tv"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:text="@string/textview_sex"
        android:textSize="18sp" />

    <Button
        android:id="@+id/userinfo_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userinfo_sex_tv"
        android:layout_alignBottom="@+id/userinfo_sex_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/userinfo_sex_tv"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:text="@string/action_sex"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/userinfo_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinfo_nickname_tv"
        android:layout_below="@+id/userinfo_sex_tv"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:text="@string/textview_sign"
        android:textSize="18sp" />

    <Button
        android:id="@+id/userinfo_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userinfo_sign_tv"
        android:layout_alignBottom="@+id/userinfo_sign_tv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/userinfo_sign_tv"
        android:background="#00000000"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:padding="0dp"
        android:text="@string/action_sign"
        android:textSize="18sp" />

    <Button
        android:id="@+id/userinfo_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinfo_sign_tv"
        android:layout_below="@+id/userinfo_sign_tv"
        android:layout_marginTop="50dp"
        android:text="@string/action_password" />

    <Button
        android:id="@+id/userinfo_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinfo_sign_tv"
        android:layout_below="@+id/userinfo_password"
        android:layout_marginTop="50dp"
        android:text="@string/action_exituser" />

</RelativeLayout>