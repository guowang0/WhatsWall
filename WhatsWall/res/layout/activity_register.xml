<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background" >

    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/edit_background"
        android:hint="@string/edit_phone"
        android:inputType="phone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/button_text"
        android:paddingLeft="55dp" />
    
    <ImageView 
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/register_phone"
        android:layout_alignTop="@+id/register_phone"
        android:src="@drawable/phone"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"/>

   

    <EditText
        android:id="@+id/register_code"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/register_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_background"
        android:layout_alignLeft="@+id/register_phone"
        android:layout_alignRight="@+id/register_phone"
        android:hint="@string/edit_code"
        android:inputType="number"
        android:textColor="@color/button_text"
        android:paddingLeft="10dp"
        android:paddingRight="130dp" />
    
     <Button
        android:id="@+id/register_send"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/register_code"
        android:layout_alignRight="@+id/register_code"
        android:text="@string/action_sendcode"
        android:textColor="@color/button_text_code"
        android:background="@drawable/button_background"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/register_l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/register_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:checked="true"
            style="@style/register_checkbox"
             />

        <TextView
            android:id="@+id/register_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview_contract"
            android:textColor="@color/button_text"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>